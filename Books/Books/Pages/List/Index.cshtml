@page
@model Books.Pages.List.IndexModel

<br />

<div class="container row p-0 m-0">
    <div class="col">
        <h2 class="text-info">Book list </h2>
    </div>
    <div class="col-auto">
        <a class="btn btn-info form-control text-white" asp-page="Upsert">Create new book</a>
    </div>

    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model.Books.Any())
            {
            <table class="table table-striped border">
                <tr>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Name"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Author"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().ISBN"></label>
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var book in Model.Books)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => book.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => book.Author)
                </td>
                <td>
                    @Html.DisplayFor(m => book.ISBN)
                </td>
                <td>
                    <button class="btn btn-danger btn-sm" asp-page-handler="Delete" asp-route-id="@book.Id" onclick="return confirm('Are you sure you want to delete this book?')">Delete</button>
                    <a class="btn btn-success btn-sm" asp-page="Upsert" asp-route-id="@book.Id">Edit</a>
                </td>
            </tr>

                }
            </table>
            }
            else
            {
                <p>No books available.</p>
            }
        </form>

    </div>
</div>